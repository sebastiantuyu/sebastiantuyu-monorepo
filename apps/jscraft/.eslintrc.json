{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    "public/*.js",
    "nuxt.config.js"
  ],
  "rules": {
    "max-len": ["error", { "code": 90 }],
    "no-console": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  }
}
